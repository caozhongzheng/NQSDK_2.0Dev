<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/custom_title_layout"
	android:layout_width="fill_parent"
	android:layout_height="48dp"
	android:padding="0dp"
	android:background="@drawable/nq_navigation_bg">
	<ImageButton
		android:id="@+id/iv_back"
		android:layout_width="48dp"
		android:layout_height="match_parent"
		android:layout_alignParentLeft="true"
		android:layout_alignParentTop="true"
		android:layout_alignParentBottom="true"
		android:layout_centerVertical="true"
		android:src="@drawable/nq_store_title_back_sel"
		android:scaleType="center"
		android:background="@color/nq_transparent"
		android:visibility="visible"
		android:contentDescription="@null" />
    <ImageView
            android:id="@+id/icon"
            android:layout_toRightOf="@id/iv_back"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"/>
    <View
            android:id="@+id/line"
            android:layout_toRightOf="@id/icon"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:background="@drawable/nq_navigation_bar_line" />

	<TextView
		android:id="@+id/activity_name"
		style="@style/nq_custom_title_text"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_toRightOf="@id/line"
		android:layout_alignParentRight="true"
		android:layout_centerVertical="true"
		android:layout_marginLeft="4dp"
		android:layout_marginRight="1dp"
		android:gravity="left"
		android:includeFontPadding="false"
		android:singleLine="true"
		android:ellipsize="marquee"
		android:marqueeRepeatLimit="marquee_forever"
		android:focusable="true"
		android:focusableInTouchMode="true"
		android:scrollHorizontally="true"
		android:textSize="18sp"
		android:textColor="@color/nq_white" />
	
		<ImageButton
		android:id="@+id/iv_delete"
		android:layout_width="48dp"
		android:layout_height="match_parent"
		android:layout_alignParentRight="true"
		android:layout_alignParentTop="true"
		android:layout_alignParentBottom="true"
		android:layout_centerVertical="true"
		android:src="@drawable/font_delete_icon"
		android:scaleType="center"
		android:background="@color/nq_transparent"
		android:visibility="visible"
		android:contentDescription="@null" />
</RelativeLayout>