<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="300dp"
              android:layout_height="200dp"
              android:background="@drawable/nq_dialog_rectangle_bg">
              
    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="40dp" 
                    android:background="@drawable/nq_dialog_title_rectangle_bg">
                    
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_centerInParent="true"
                  android:textSize="18sp"
                  android:textColor="@color/nq_white"
                  android:text="@string/nq_point_not_enough"/>
        <ImageView
                android:id="@+id/btn_exit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/nq_point_diaglo_gp_exit"
                />
    </RelativeLayout>

    <TextView android:layout_width="wrap_content"
              android:layout_height="0dp"
              android:layout_gravity="center"
              android:gravity="center_vertical"
              android:layout_weight="1.0"
              android:textSize="16sp"
              android:textColor="@color/nq_black"
              android:layout_marginLeft="10dp"
              android:layout_marginRight="10dp"
              android:text="@string/nq_point_not_enough_msg"/>

    <Button
            android:id="@+id/btn_point_center"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:textColor="@color/nq_white"
            android:background="@drawable/nq_btn_dialog_right"
            android:text="@string/nq_enter_point_center"/>

</LinearLayout>